{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "platform": {
        "php": "^7.4"
    },
    "require": {
        "php": ">=5.6",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/admin_toolbar": "^2",
        "drupal/advagg": "^4.0",
        "drupal/backup_migrate": "^4.0",
        "drupal/block_class": "^1.0",
        "drupal/blogapi": "^1.0",
        "drupal/bootstrap_barrio": "^4.22",
        "drupal/bootstrap_layouts": "^5.1",
        "drupal/bootstrap_library": "^1.11",
        "drupal/bootstrap_paragraphs": "^2.0",
        "drupal/cdn": "^3.3",
        "drupal/chosen": "^2.7",
        "drupal/coder": "^8.3",
        "drupal/console": "~1.0",
        "drupal/core": "^8.7.0",
        "drupal/core-dev": "^8.8",
        "drupal/ctools": "^3.2",
        "drupal/devel": "^3",
        "drupal/ds": "^3.3",
        "drupal/entity_browser": "^2.2",
        "drupal/entity_reference_revisions": "^1.6",
        "drupal/field_formatter_class": "^1.1",
        "drupal/field_group": "^3.0",
        "drupal/geshifilter": "^1.2",
        "drupal/hms_field": "^1.0",
        "drupal/honeypot": "^2.0",
        "drupal/imagemagick": "^3.1",
        "drupal/libraries": "^3.0",
        "drupal/link_attributes": "^1.8",
        "drupal/login_security": "^1.5",
        "drupal/memcache": "^2.0",
        "drupal/memcache_storage": "^1.0",
        "drupal/optimizedb": "^1.0",
        "drupal/paragraphs_edit": "^2.0",
        "drupal/pathauto": "^1.4",
        "drupal/redirect": "^1.4",
        "drupal/seckit": "^1.2",
        "drupal/security_review": "1.x-dev",
        "drupal/simplepodcast": "^1.8",
        "drupal/tour_ui": "^1.0",
        "drupal/views_bootstrap": "^4.1",
        "drupal/viewsreference": "^2.0",
        "drupal/xmlrpc": "^1.0",
        "drush/drush": "^9.0.0",
        "squizlabs/php_codesniffer": "^3.5",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "mglaman/phpstan-drupal": "^0.12.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.19",
        "phpstan/phpstan-deprecation-rules": "^0.12.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
	"phpcs": [
	    "phpcs --extensions=\"php,module,inc,install,test,profile,theme,css,info,txt,md,yml\" --ignore=\"*.min.*\" --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer --standard=DrupalPractice --"
	],
	"phpcbf": [
	    "phpcbf --standard=DrupalPractice --extensions='php,module,inc,install,test,profile,theme,css,info,txt,md,yml' --ignore='*.min.*' --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer --"
	],
	"phpstan": [
	    "phpstan analyse --level 7 --"
	],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        }
    }
}
